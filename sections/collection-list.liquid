<!-- sections/gallery.liquid -->
<section class="relative gallery text-scheme-text bg-scheme-background overflow-hidden  {% if section.settings.use_gradient_background %}bg-scheme-gradient{% endif %}" data-color-scheme="{{ section.settings.color_scheme | default: 'primary' }}"
  data-section-type="gallery"
  data-section-id="{{ section.id }}">

  <div class="section-content py-section-vertical-spacing px-section z-10">
    {% unless section.settings.title == blank %}
    <div class="max-w-site mx-auto">
      <h2 class="text-center font-heading  heading-standard heading-style break-words {{ settings.heading_drop_shadow_style }}">
        {{ section.settings.title | strip | escape }}
      </h2>
    </div>
    {% endunless %}

    <div class="max-w-site mx-auto grid lg:grid grid-flow-row-dense lg:grid-cols-12 lg:auto-rows-auto {% if section.settings.title != '' %}section-content-top-margin{% endif %} gap-theme">
      {%- assign collections = section.blocks | where: "type", "collection" %}
      {% for block in collections %}
      {% unless block.type == 'sticker' or block.type == 'background_pattern' or block.type == 'background_shape' or block.type == 'shape_divider' %}
      {%- liquid
        assign default_label = 'homepage.onboarding.collection_title' | t
        assign collection = block.settings.collection
        assign url = collection.url
        assign image = collection.image | default: collection.products.first.featured_image
        assign button_text = collection.title | default: default_label

        if collections.size == 2
          assign grid_item_size = 'col-span-full lg:col-span-6'
        else
          capture grid_item_size
            if section.settings.first_large_image_position == 'top_left'
              cycle 'col-span-2 lg:col-span-8 lg:row-span-2', 'col-span-1 lg:col-span-4', 'col-span-1 lg:col-span-4', 'col-span-1 lg:col-span-4', 'col-span-1 lg:col-span-4 lg:row-start-4', 'col-span-2 lg:col-span-8 lg:row-span-2'
            else
              cycle 'col-span-1 lg:col-span-4', 'col-span-1 lg:col-span-4 lg:row-start-2', 'col-span-2 lg:col-span-8 lg:row-span-2', 'col-span-2 lg:col-span-8 lg:row-span-2', 'col-span-1 lg:col-span-4', 'col-span-1 lg:col-span-4'
            endif
          endcapture
        endif
      -%}

      {% comment %}theme-check-disable UndefinedObject{% endcomment %}
      <div class="gallery-item relative flex items-center justify-center {{ grid_item_size }}" {{ block.shopify_attributes }} >
      {% comment %}theme-check-enable UndefinedObject{% endcomment %}
        <a href="{{ url }}" class="block group w-full">

          {%- render 'shape-defs',
            shape: block.settings.image_shape,
            shape_id: block.id,
            index: forloop.index0
          -%}

          {%- if image != blank -%}
          <div class="w-full">
            {%- render
              'media-image',
              media: image,
              shape_id: block.id,
              shape: block.settings.image_shape,
              crop: section.settings.crop,
              is_card: false,
              rotate: block.settings.rotate_image,
              container_id: section.id,
              index: forloop.index0
            -%}
          </div>
          {%- else -%}
          <div class="w-full">
            {%- render 'media-image-placeholder',
              container_id: block.id,
              shape_id: block.id,
              shape: block.settings.image_shape,
              crop: block.settings.crop,
              rotate: block.settings.rotate_image,
              is_card: false
            -%}
          </div>
          {%- endif -%}

          {%- if button_text != blank -%}
          <div class="{% if section.settings.show_buttons_on_mobile %}flex{% else %}hidden lg:flex{% endif %}  gallery-item__content absolute top-0 left-0 right-0 bottom-0  items-center justify-center text-scheme-text text-center z-10 px-5  {% if section.settings.only_show_button_on_hover %}lg:opacity-0 group-hover:lg:opacity-100 transition duration-200 ease-in-out{% endif %}">
            <span class="push-btn  text-center inline-block break-words">
              <span class="{{ section.settings.button_style }}">{{ button_text }}</span>
            </span>
          </div>
          {%- endif -%}
        </a>
      </div>
      {%- endunless -%}
      {%- endfor -%}
    </div>
  </div>

  {%- liquid
    for block in section.blocks
      case block.type
        when 'background_shape'
          render 'block-background-shape' with block: block, section: section
        when 'background_pattern'
          render 'block-background-pattern' with block: block, section: section, scheme: section.settings.color_scheme
      endcase
    endfor
  -%}
</section>

{%- liquid
  assign stickers = section.blocks | where: "type", "sticker"
  assign shape_dividers = section.blocks | where: "type", "shape_divider"
  for sticker in stickers
    render 'block-sticker' with block: sticker, section: section
  endfor
  for shape_divider in shape_dividers
    render 'block-shape-divider' with block: shape_divider, section: section
  endfor
-%}

